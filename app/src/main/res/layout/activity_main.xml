<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:dotsColor="#FFDEE0DF"
        app:dotsCornerRadius="8dp"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressMode="false"
        app:selectedDotColor="#166BFA"
        app:layout_constraintVertical_bias="0.8"
        />

    <Button
        android:id="@+id/btn_royhat"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="Ro'yxatdan o'tish"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/btn_otkazib_yuborish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dots_indicator"
        android:backgroundTint="#166BFA"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_otkazib_yuborish"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="O'tkazib yuborish"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_royhat"
        android:backgroundTint="#166BFA"
        android:alpha="0.35"
        android:textAllCaps="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
